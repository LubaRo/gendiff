{
    "name": "lubaro/gendiff",
    "description": "Utility for finding differences in configuration files",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "LubaRo",
            "email": "user.luyba@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/GenDiff.php",
            "src/Parser.php",
            "src/Parsers/Yaml.php",
            "src/Formatter.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Pretty.php",
            "src/Formatters/Json.php"
        ]
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpunit": "phpunit"
    },
    "require": {
        "docopt/docopt": "^1.0",
        "funct/funct": "^1.5",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5"
    }
}
